{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    backoff,
    gproc,
    {riakc, "2.5.3"},
    {riak_pool,
        {git, "https://gitlab.com/leapsight/riak_pool.git", {branch, "master"}}
    },
    {ksuid,
        {git, "https://gitlab.com/leapsight/ksuid.git", {branch, "master"}}
    },
    {app_config,
        {git, "https://gitlab.com/leapsight/app_config.git", {branch, "master"}}
    }
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [riak_pool, gproc, backoff, app_config, riakc, reliable]}
]}.

{ct_opts, [
    {sys_config, ["config/sys.config"]}
]}.

{profiles, [
    {docs, [
        {deps, [
            {edown,
                ".*",
                {git, "https://github.com/uwiger/edown.git", {branch, "master"}}
            }
        ]},
        {edoc_opts, [
            {doclet, edown_doclet},
            {top_level_readme, {
                "./DOCS.md",
                "https://gitlab.com/leapsight/babel"
            }}
        ]}
    ]},
    {test, [
        {deps, [meck, proper]},
        {ct_opts, [
            {sys_config, ["config/sys.config"]}
        ]},
        {erl_opts, [debug_info, export_all, nowarn_export_all]}
    ]}
]}.